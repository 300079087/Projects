<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveStuff.MainPage">

    <StackLayout>
        <Label Padding="20,40,20,20" Text="User Name" FontSize="Title"/>
        <Entry Placeholder="Please enter your username" x:Name="txtUserName"/>
        <Button Text="Save String" Clicked="Save_Clicked"/>
        <Button Text="Read String" Clicked="Read_Clicked"/>
        <Button Text="Clear String" Clicked="Clear_Clicked"/>
    </StackLayout>

</ContentPage>
