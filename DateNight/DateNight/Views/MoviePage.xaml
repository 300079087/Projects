<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DateNight.Views.MoviePage"
             Title="MoviePage">
   <VerticalStackLayout Padding="20,60,20,20">
        <Label Text="Going to a movie" FontSize="Title" HorizontalOptions="Center"/>
        <Image Source="movie_main" Margin="0,60,0,60"/>
        <Border StrokeThickness="1" Stroke="Black" />
        <Entry x:Name="txtMovie" Placeholder="Enter Cost of Movie" FontSize="Medium" TextColor="Black" PlaceholderColor="Black"/>

    </VerticalStackLayout>
</ContentPage>
