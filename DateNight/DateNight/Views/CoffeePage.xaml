<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DateNight.Views.CoffeePage"
             Title="CoffeePage">
    <VerticalStackLayout Padding="20,60,20,20">
        <Label Text="Going for coffee" FontSize="Title" HorizontalOptions="Center"/>
        <Image Source="coffee_main" Margin="0,20,0,20"/>
        <Border StrokeThickness="1" Stroke="Black" />
        <Entry x:Name="txtCoffee" Placeholder="Enter Cost of Coffee" FontSize="Medium" TextColor="Black" PlaceholderColor="Black"/>
        
    </VerticalStackLayout>
</ContentPage>
