<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimerPro.MainPage">

    <VerticalStackLayout Padding="20,150,20,20">
        <Label x:Name="lblDisplay" Text="00:00:00" FontSize="Title" HorizontalOptions="Center" Padding="0,0,0,120" />

        <Button x:Name="btnStart" Text="Start" IsEnabled="True" Clicked="Start_Clicked"/>
        <Button x:Name="btnStop" Text="Stop" Margin="0,20,0,20" IsEnabled="False" Clicked="Stop_Clicked"/>
        <Button x:Name="btnReset" Text="Reset" Clicked="Reset_Clicked"/>

    </VerticalStackLayout>

</ContentPage>


